{
    "version": 2,
    "builds": [
        {
            "src": "div_tracker_app/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": { 
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "div_tracker_app/wsgi.py"
        }
    ],
    "crons": [
        {
          "path": "/api/process_dividend_payments",
          "schedule": "*/1 * * * *"
        }
    ]
}